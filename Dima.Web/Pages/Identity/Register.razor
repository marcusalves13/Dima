@page "/registrar"
@layout HeadlessLayout

<PageTitle>Dima - Registrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Elevation="3" Class="mud-width-full pa-8">
            <div class="d-flex justify-center">
                <img alt="Dima - Seu Controle Financeiro"
                     src="/imgs/dima.png"
                     width="200" />
            </div>
            <MudForm @ref="form">
                <MudTextField T="string"
                              InputType="InputType.Email"
                              Label="Email"
                              Required="true"
                              RequiredError="Email é obrigatório."
                              Validation="@(new EmailAddressAttribute(){ErrorMessage = "O endereço de e-mail é inválido."})" />

                <MudTextField T="string"
                              InputType="InputType.Password"
                              Label="Senha"
                              Required="true"
                              RequiredError="Senha é obrigatório." />
            </MudForm>
            <div class="d-flex mt-8">
                <MudButton Variant="Variant.Filled" Color="Color.Primary">REGISTRAR</MudButton>
                <MudSpacer />
                <MudButton Href="/login" Variant="Variant.Filled">JÁ TENHO UMA CONTA</MudButton>
            </div>
        </MudPaper>
    </MudItem>
</MudGrid>

@code{
    MudForm form;
}